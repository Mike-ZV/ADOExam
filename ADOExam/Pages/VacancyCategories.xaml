<Page x:Class="ADOExam.Pages.VacancyCategories"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADOExam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VacancyCategories">

    <Grid>
        <Grid>
            <TextBox Width="150" Height="25" Margin="0, 0, 150, 60" x:Name="CatName"/>
            <TextBlock Width="150" Height="25" Margin="170, 0, 0, 60">Наименование категории</TextBlock>
            <TextBox Width="150" Height="25" Margin="0, 0, 150, 0" x:Name="RSSURL"/>
            <TextBlock Width="150" Height="25" Margin="170, 0, 0, 0">Ссылка RSS</TextBlock>
            <Button Width="150" Height="30" Content="Сохранить" Margin="0, 100, 0, 0" x:Name="SaveCat" Click="SaveCat_Click"/>
            <TextBlock x:Name="InfoBlock" Width="700" Height="80" Margin="0, 220, 0, 0"></TextBlock>
        </Grid>
    </Grid>
</Page>
